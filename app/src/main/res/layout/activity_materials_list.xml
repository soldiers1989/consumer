<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/searchTV"
                    android:layout_width="match_parent"
                    android:hint="搜索设计案例、家装材料"
                    android:textCursorDrawable="@null"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/search_icon"
                    android:background="@drawable/search_bac"
                    android:drawableRight="@mipmap/clean_icon"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:layout_height="27dp"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/tabRV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="2">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
                android:id="@+id/dataRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="61dp"
                 android:layout_gravity="bottom">

        <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color366"
                android:text="添加额外购买的商品"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"/>
        <TextView
                android:id="@+id/totle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="订单合计：3600 元"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|right"/>

    </FrameLayout>


    <LinearLayout
            android:id="@+id/filtrateCL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5000"
            android:visibility="gone"
            android:gravity="right">
        <android.support.constraint.ConstraintLayout
                android:layout_width="278dp"
                android:layout_height="542dp"
                android:background="@color/white">


            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择订购类型"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"/>
            <View
                    android:id="@+id/vLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorD8D"/>

            <TextView
                    android:id="@+id/tab1"
                    android:layout_width="48dp"
                    android:layout_height="22dp"
                    android:text="内购"
                    android:textColor="@color/color555"
                    android:gravity="center"
                    android:background="@drawable/login_rb_bg_unchecked"
                    app:layout_constraintTop_toBottomOf="@id/vLine"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:id="@+id/tab2"
                    android:layout_width="48dp"
                    android:layout_height="22dp"
                    android:text="外购"
                    android:textColor="@color/color555"
                    android:gravity="center"
                    android:background="@drawable/login_rb_bg_unchecked"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tab1"
                    app:layout_constraintLeft_toRightOf="@id/tab1"
                    android:layout_marginLeft="12dp"/>

            <TextView android:id="@+id/confirm"
                      android:layout_width="160dp"
                      android:layout_height="44dp"
                      android:text="确定"
                      android:gravity="center"
                      android:background="@color/color366"
                      android:checked="true"
                      android:textSize="14sp"
                      android:button="@null"
                      android:textColor="@color/white"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
            />
            <TextView android:id="@+id/cancel"
                      android:layout_width="0dp"
                      android:layout_height="44dp"
                      android:text="重置"
                      android:gravity="center"
                      android:background="#E6E6E6"
                      android:checked="false"
                      android:textSize="14sp"
                      android:button="@null"
                      android:textColor="@color/color5D5"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toLeftOf="@id/confirm"
                      app:layout_constraintLeft_toLeftOf="parent"
            />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</FrameLayout>