<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingRight="55dp"
        android:paddingLeft="55dp"
        android:layout_height="match_parent">


    <EditText
            android:id="@+id/accountTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:singleLine="true"
            android:maxLength="11"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:textColor="@color/colorc9c"
            android:textSize="14sp"
            android:hint="请输入手机号码"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_amount_layout"
            android:layout_marginTop="108dp"
    />


    <EditText
            android:id="@+id/passwordED"
            android:layout_width="0dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorc9c"
            android:hint="输入验证码"
            android:textSize="14sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/smsB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accountTV"
            android:background="@drawable/bg_amount_layout"
            android:layout_height="40dp"/>


    <RadioButton
            android:id="@+id/smsB"
            android:layout_width="108dp"
            app:layout_constraintTop_toTopOf="@id/passwordED"
            app:layout_constraintBottom_toBottomOf="@id/passwordED"
            app:layout_constraintRight_toRightOf="parent"
            android:text="获取验证码"
            android:textSize="13sp"
            android:background="@drawable/bac_ede"
            android:gravity="center"
            android:textColor="@color/color5D5"
            android:button="@null"
            android:layout_height="39dp"/>


    <EditText
            android:id="@+id/pictureED"
            android:layout_width="0dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorc9c"
            android:hint="输入验证码"
            android:textSize="14sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/smsB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordED"
            android:background="@drawable/bg_amount_layout"
            android:layout_height="40dp"/>


    <ImageView
            android:id="@+id/picture"
            android:layout_width="108dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="@id/pictureED"
            app:layout_constraintBottom_toBottomOf="@id/pictureED"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_amount_layout"/>


    <RadioButton
            android:id="@+id/nextB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="设置新密码"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/login_rb_bac"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="129dp"

    />
</android.support.constraint.ConstraintLayout>