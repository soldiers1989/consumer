<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText android:layout_width="271dp"
              android:layout_height="46dp"
              android:background="@drawable/edit_bac"
              android:layout_gravity="center_horizontal"
              android:hint="请输入您的姓名"
              android:textSize="18sp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_marginTop="76dp"/>

    <RadioGroup android:layout_width="270dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp">
        <RadioButton android:layout_width="135dp"
                     android:layout_height="match_parent"
                     android:button="@null"
                     android:text="男"
                     android:gravity="center"
                     android:textColor="@drawable/sex_text_select"
                     android:textSize="14sp"
                     android:background="@drawable/sex_select"
        />
        <RadioButton android:layout_width="135dp"
                     android:layout_height="match_parent"
                     android:button="@null"
                     android:text="女"
                     android:gravity="center"
                     android:textColor="@drawable/sex_text_select"
                     android:textSize="14sp"
                     android:background="@drawable/sex_select_2"
        />

    </RadioGroup>
</LinearLayout>