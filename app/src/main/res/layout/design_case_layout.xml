<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/coverPictur"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#999"/>
    <TextView android:layout_width="0dp"
              android:layout_height="29dp"
              android:background="#8000"
              android:textColor="@color/white"
              android:text="北纬四十度社区2号楼三单元1005号"
              android:textSize="11sp"
              android:visibility="gone"
              android:gravity="center"
              app:layout_constraintLeft_toLeftOf="@id/coverPictur"
              app:layout_constraintRight_toRightOf="@id/coverPictur"
    />

    <ImageView
            android:id="@+id/head"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@mipmap/doctor_head"
            app:layout_constraintTop_toBottomOf="@id/coverPictur"
            app:layout_constraintBottom_toBottomOf="@id/coverPictur"
            app:layout_constraintLeft_toLeftOf="@id/coverPictur"
            android:layout_marginLeft="16dp"/>


    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈小果"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/color333"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/head"
            app:layout_constraintBottom_toBottomOf="@id/head"
    />
    <TextView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北欧/简装/350m²"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/color666"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
    />
    <TextView
            android:id="@+id/praiseTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:textSize="12sp"
            android:gravity="center"
            android:drawableLeft="@mipmap/praise_no"
            android:textColor="@color/color666"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            app:layout_constraintRight_toRightOf="@id/coverPictur"
            app:layout_constraintBottom_toBottomOf="@id/name"
    />
</android.support.constraint.ConstraintLayout>