<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"/>

    <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@color/color529"
            app:layout_constraintTop_toBottomOf="@id/brand"
            app:layout_constraintLeft_toLeftOf="@id/brand"
            android:layout_marginTop="5dp"/>

    <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售后电话："
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintLeft_toRightOf="@id/logo"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"/>
    <TextView
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售门店："
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintLeft_toLeftOf="@id/phone"
            android:layout_marginTop="4dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丽泽店 010-78945515 \n丽泽店 010-78945515 "
            android:textSize="10sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/shop"
            app:layout_constraintLeft_toLeftOf="@id/phone"
            android:layout_marginTop="4dp"
    />
    <TextView
            android:id="@+id/introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="连续五年高端卫浴领导者，专注健康厨卫。浴、厨卫家具、五金龙头自主研发连续五年高端卫浴领导者，专注健康厨卫。连续五年高端卫浴领导者，专注健康厨卫。"
            android:textSize="10sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="6dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E4E4E4"
          app:layout_constraintTop_toBottomOf="@id/introduction"
          android:layout_marginTop="10dp"
    />

</android.support.constraint.ConstraintLayout>