<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp"
        android:background="@color/white">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/areaRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="44dp"
            android:paddingRight="30dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
    </android.support.v7.widget.RecyclerView>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/bottom_line"/>

    <EditText
            android:id="@+id/start"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_amount_layout"
            app:layout_constraintTop_toBottomOf="@id/areaRV"/>
    <TextView
            android:id="@+id/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="#FF535353"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/start"
            app:layout_constraintBaseline_toBaselineOf="@id/start"
            android:layout_marginLeft="14dp"
    />
    <EditText
            android:id="@+id/end"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_amount_layout"
            app:layout_constraintLeft_toRightOf="@+id/interval"
            app:layout_constraintBaseline_toBaselineOf="@id/start"
            android:layout_marginLeft="14dp"
    />
</android.support.constraint.ConstraintLayout>