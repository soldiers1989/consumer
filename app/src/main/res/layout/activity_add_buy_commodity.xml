<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/predetermine"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/phoneTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="商品名称："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/phoneTV"
                          app:layout_constraintTop_toTopOf="@id/phoneTV"
                          app:layout_constraintBottom_toBottomOf="@id/phoneTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="型号："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/nameTV"
                          app:layout_constraintTop_toTopOf="@id/nameTV"
                          app:layout_constraintBottom_toBottomOf="@id/nameTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="品类："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>


                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/addressTV"
                          app:layout_constraintTop_toTopOf="@id/addressTV"
                          app:layout_constraintBottom_toBottomOf="@id/addressTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/villageTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="品牌："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/villageTV"
                          app:layout_constraintTop_toTopOf="@id/villageTV"
                          app:layout_constraintBottom_toBottomOf="@id/villageTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/areaTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="数量："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/areaTV"
                          app:layout_constraintTop_toTopOf="@id/areaTV"
                          app:layout_constraintBottom_toBottomOf="@id/areaTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/remarkTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="59dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/remarkTV"
                          app:layout_constraintTop_toTopOf="@id/remarkTV"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/describeTV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="问题描述："
                        android:gravity="right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*仅支持上传图片文件"
                        android:gravity="right"
                        app:layout_constraintBaseline_toBaselineOf="@id/describeTV"
                        app:layout_constraintLeft_toRightOf="@id/describeTV"
                        android:textColor="@color/red"
                        android:textSize="11sp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/photoRV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/describeTV"
                        app:layout_constraintLeft_toLeftOf="@id/describeTV"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="12dp"
                        app:spanCount="3"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager">

                </android.support.v7.widget.RecyclerView>


            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
            android:id="@+id/predetermine"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/color366"
            android:text="确定提交"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
