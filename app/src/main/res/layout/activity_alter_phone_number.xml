<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="当前手机号："
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="108dp"/>
    <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color555"
            android:textSize="14sp"
            android:text="13206589229"
            app:layout_constraintBaseline_toBaselineOf="@id/present"
            app:layout_constraintLeft_toRightOf="@id/present"
            android:layout_marginTop="108dp"/>


    <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="当前手机号："
            app:layout_constraintTop_toTopOf="@id/passwordED"
            app:layout_constraintBottom_toBottomOf="@id/passwordED"
            app:layout_constraintLeft_toLeftOf="@id/present"
    />
    <EditText
            android:id="@+id/passwordED"
            android:layout_width="0dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorc9c"
            android:hint="输入验证码"
            android:textSize="14sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/smsB"
            app:layout_constraintLeft_toRightOf="@id/verify"
            app:layout_constraintTop_toBottomOf="@id/present"
            android:background="@drawable/bg_amount_layout"
            android:layout_height="40dp"/>


    <RadioButton
            android:id="@+id/smsB"
            android:layout_width="108dp"
            app:layout_constraintTop_toTopOf="@id/passwordED"
            app:layout_constraintBottom_toBottomOf="@id/passwordED"
            app:layout_constraintRight_toRightOf="parent"
            android:text="获取验证码"
            android:enabled="false"
            android:checked="false"
            android:textSize="13sp"
            android:background="@drawable/bac_ede"
            android:gravity="center"
            android:textColor="@color/color5D5"
            android:button="@null"
            android:layout_height="39dp"/>


    <TextView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="图片验证码："
            app:layout_constraintTop_toTopOf="@id/pictureED"
            app:layout_constraintBottom_toBottomOf="@id/pictureED"
            app:layout_constraintLeft_toLeftOf="@id/present"/>

    <EditText
            android:id="@+id/pictureED"
            android:layout_width="0dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorc9c"
            android:hint="输入验证码"
            android:textSize="14sp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/smsB"
            app:layout_constraintLeft_toRightOf="@id/picture"
            app:layout_constraintTop_toBottomOf="@id/passwordED"
            android:background="@drawable/bg_amount_layout"
            android:layout_height="40dp"/>


    <ImageView
            android:id="@+id/pictureIV"
            android:layout_width="108dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="@id/pictureED"
            app:layout_constraintBottom_toBottomOf="@id/pictureED"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_amount_layout"/>

    <TextView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#66779E"
            android:textSize="12sp"
            android:text="换一张"
            app:layout_constraintTop_toBottomOf="@id/pictureIV"
            app:layout_constraintRight_toRightOf="@id/pictureIV"/>


    <RadioButton
            android:id="@+id/nextB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="下一步"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/login_rb_bac"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="129dp"

    />
</android.support.constraint.ConstraintLayout>