<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="55dp"
        android:paddingRight="55dp">


    <EditText
            android:id="@+id/accountTV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textCursorDrawable="@null"
            android:textColor="#666"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            android:textColorHint="@color/colorc9c"
            android:hint="请输入新密码"
            android:textSize="14sp"
            android:background="@drawable/bg_amount_layout"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="最少6位，数字+字母"
              android:textSize="12sp"
              android:textColor="@color/color667"
              app:layout_constraintTop_toBottomOf="@id/accountTV"
              app:layout_constraintLeft_toLeftOf="@id/accountTV"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="8dp"
    />


    <EditText
            android:id="@+id/passwordED"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textCursorDrawable="@null"
            android:textColor="#666"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorc9c"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            app:layout_constraintTop_toBottomOf="@id/accountTV"
            android:background="@drawable/bg_amount_layout"
            android:layout_marginTop="34dp"
    />


    <RadioButton
            android:id="@+id/confirmB"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="设置新密码"
            android:gravity="center"
            android:background="@drawable/login_rb_bac"
            android:checked="true"
            android:textSize="16sp"
            android:button="@null"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp"
    />
</android.support.constraint.ConstraintLayout>