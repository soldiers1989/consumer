<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

    <View
            android:id="@+id/leftLine"
            android:layout_width="25dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/proIcon"
            app:layout_constraintBottom_toBottomOf="@id/proIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/color366"
    />

    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/proIcon"
            app:layout_constraintLeft_toLeftOf="@id/proIcon"
            app:layout_constraintRight_toRightOf="@id/proIcon"
            android:layout_marginBottom="5dp"
    />
    <ImageView
            android:id="@+id/proIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@id/proTitle"
            app:layout_constraintLeft_toRightOf="@+id/leftLine"
            android:layout_marginBottom="5dp"
    />
    <TextView
            android:id="@+id/proTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/proIcon"
            app:layout_constraintRight_toRightOf="@id/proIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="量房"
            android:textSize="9sp"
            android:layout_marginBottom="5dp"/>
    <View
            android:id="@+id/fg"
            android:layout_width="25dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toTopOf="@id/proIcon"
            app:layout_constraintBottom_toBottomOf="@id/proIcon"
            app:layout_constraintLeft_toRightOf="@id/proIcon"
            android:background="@color/color366"
    />

</android.support.constraint.ConstraintLayout>