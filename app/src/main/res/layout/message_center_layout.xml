<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/extensively_bac">


    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/left_v_line"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:text="促销优惠"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/title"
              app:layout_constraintBottom_toBottomOf="@id/title"
              android:drawablePadding="10dp"
              android:textSize="10sp"
              android:textColor="@color/color999"
              android:text="促销优惠"/>

    <View
            android:id="@+id/hLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorD8D"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="6dp"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="@color/color999"
            android:text="居然装饰特惠装修节开幕了！优惠多多，惊喜多多。欢迎您来抢购！"/>


    <RadioButton android:id="@+id/info"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:text="详情 >>"
                 android:gravity="center"
                 android:background="@drawable/login_rb_bg_checked"
                 android:checked="true"
                 android:textSize="12sp"
                 android:button="@null"
                 android:textColor="@color/white"
                 android:layout_marginTop="10dp"
                 android:paddingLeft="8dp"
                 android:paddingRight="8dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/content"/>

</android.support.constraint.ConstraintLayout>
