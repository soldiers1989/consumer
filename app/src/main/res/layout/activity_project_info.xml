<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/titleCL"
            android:layout_width="match_parent"
            android:background="@color/color366"
            android:paddingTop="30dp"
            android:layout_height="74dp">

        <ImageView
                android:id="@+id/backIV"
                android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/tab_register_return"
                   android:tint="@color/white"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginLeft="12dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="项目详情"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="评分"
                  android:textColor="@color/white"
                  android:textSize="11sp"
                  android:gravity="center"
                  android:drawablePadding="5dp"
                  android:layout_marginRight="12dp"
                  android:drawableRight="@mipmap/score_icon"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleCL"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/topIV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/test_project_icon"/>
                <View android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:background="#99000000"
                      app:layout_constraintTop_toTopOf="@id/topIV"
                      app:layout_constraintBottom_toBottomOf="@id/topIV"
                />
                <!-- @mipmap/test_project_icon-->

                <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目概况"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:drawableLeft="@drawable/left_v_line_whit"
                        android:layout_marginTop="28dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <View
                        android:id="@+id/vLine1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/title1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pm20190821323432"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/vLine1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="21dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京市 朝阳区 亚运村 慧忠里第一社区 3号楼 305"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/title2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="21dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>


                <TextView
                        android:id="@+id/info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="户型：：三室两厅两卫"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="21dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title3"/>
                <TextView
                        android:id="@+id/info2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="装修风格：欧式"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="@id/info1"
                        app:layout_constraintTop_toBottomOf="@id/info1"/>
                <TextView
                        android:id="@+id/info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="建筑面积：100.98m²"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintLeft_toLeftOf="@id/info1"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>


                <TextView
                        android:id="@+id/info10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="190dp"
                        android:padding="5dp"
                        android:text="套内建筑面积：90m2"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/info1"/>

                <TextView
                        android:id="@+id/info5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/info10"
                        android:padding="5dp"
                        android:text="装修类型：全屋装"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/info2"/>
                <TextView
                        android:id="@+id/info6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="@id/info10"
                        android:padding="5dp"
                        android:text="房屋类型；新房"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/info2"/>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
            >
                <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="施工进度"
                        android:textColor="@color/color1f1"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <View
                        android:id="@+id/vLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/colorD8D"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/title4"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/progressRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/vLine2"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:orientation="horizontal">
                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/extensively_bac"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
            >


                <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/prs_icon"/>

                <TextView
                        android:id="@+id/contract2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日进度：水电施工、木门测量"
                        android:textColor="@color/color555"
                        android:textSize="10sp"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintLeft_toRightOf="@id/icon"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/contract3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="施工状态：正常"
                        android:textColor="@color/color555"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        app:layout_constraintLeft_toLeftOf="@id/contract2"
                        app:layout_constraintTop_toBottomOf="@id/contract2"/>
                <TextView
                        android:id="@+id/contract4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同开工日期：2019年7月1日"
                        android:textColor="@color/color555"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        app:layout_constraintLeft_toLeftOf="@id/contract2"
                        app:layout_constraintTop_toBottomOf="@id/contract3"/>
                <TextView
                        android:id="@+id/contract5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同竣工日期：2019年8月1日"
                        android:textColor="@color/color555"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        app:layout_constraintLeft_toLeftOf="@id/contract2"
                        app:layout_constraintTop_toBottomOf="@id/contract4"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/prsRV"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="4"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/contract5">

                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/extensively_bac"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/serveTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务信息"
                        android:textColor="@color/color1f1"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <View
                        android:id="@+id/fgV2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/serveTV"
                        android:layout_marginTop="5dp"/>
                <TextView
                        android:id="@+id/md"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门店信息"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/fgV2"
                />
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/serveRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@id/md"
                >
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
            <!-- </android.support.v7.widget.CardView>-->


            <!--<android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">-->

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/extensively_bac"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">

                <TextView
                        android:id="@+id/worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看工人信息"
                        android:textColor="@color/color1f1"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                        android:id="@+id/swIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/up_icon"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintRight_toRightOf="parent"/>
                <View
                        android:id="@+id/fgV3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorFFE"
                        app:layout_constraintTop_toBottomOf="@id/worker"
                        android:layout_marginTop="5dp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/workerRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintTop_toTopOf="@id/fgV3"
                >
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
            <!-- </android.support.v7.widget.CardView>-->


            <android.support.constraint.ConstraintLayout
                    android:id="@+id/waitCL"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/white"
            >
                <TextView
                        android:id="@+id/itemTV1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color1f1"
                        android:text="材料信息"
                        android:textSize="15sp"
                        android:paddingLeft="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="12dp"
                />

            </android.support.constraint.ConstraintLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/dataRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/waitCL"
                    android:padding="10dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>

            <TextView android:layout_width="match_parent"
                      android:layout_height="43dp"
                      android:text="项目信息"
                      android:background="@color/white"
                      android:textSize="15sp"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:textColor="@color/color1f1"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorD8D"
            />

            <!--  <android.support.v7.widget.CardView
                      android:id="@+id/tabCV"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="12dp"
                      android:layout_marginEnd="12dp"
                      app:cardCornerRadius="5dp"
                      app:cardElevation="6dp"
                      android:layout_marginTop="6dp"
                      android:layout_marginBottom="6dp"
                      app:cardBackgroundColor="@color/white">-->
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/itemRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/extensively_bac"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/hLine"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">
            </android.support.v7.widget.RecyclerView>
            <!--  </android.support.v7.widget.CardView>-->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>
