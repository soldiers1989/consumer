<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:id="@+id/topIV"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:background="@mipmap/text_bac_2"/>
    <TextView
            android:id="@+id/shareTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="16sp"
            android:text="分享到"
            app:layout_constraintTop_toBottomOf="@id/topIV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"/>
    <View
            android:id="@+id/hLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorD8D"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/shareTV"/>
    <View
            android:id="@+id/hLine2"
            android:layout_width="67dp"
            android:layout_height="3dp"
            android:background="@color/colorD8D"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/hLine"
            app:layout_constraintBottom_toBottomOf="@id/hLine"
            app:layout_constraintTop_toBottomOf="@id/shareTV"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/appRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spanCount="4"
            app:layout_constraintTop_toBottomOf="@id/hLine2"
            android:layout_marginTop="10dp"
            app:layoutManager="android.support.v7.widget.GridLayoutManager">
    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/shareToRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/appRV">
        <TextView
                android:id="@+id/friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333"
                android:textSize="16sp"
                android:text="分享到"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"/>
        <View
                android:id="@+id/hLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorD8D"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/friend"/>
        <View
                android:id="@+id/hLine4"
                android:layout_width="67dp"
                android:layout_height="3dp"
                android:background="@color/colorD8D"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/hLine3"
                app:layout_constraintBottom_toBottomOf="@id/hLine3"
                app:layout_constraintTop_toBottomOf="@id/friend"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hLine3"
                android:layout_marginTop="10dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager">
        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>



    <TextView
            android:id="@+id/rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="16sp"
            android:text="分享到"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shareToRV"
            android:layout_marginTop="15dp"/>
    <View
            android:id="@+id/hLine5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorD8D"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/rule"/>
    <View
            android:id="@+id/hLine6"
            android:layout_width="67dp"
            android:layout_height="3dp"
            android:background="@color/colorD8D"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/hLine5"
            app:layout_constraintBottom_toBottomOf="@id/hLine5"
            app:layout_constraintTop_toBottomOf="@id/rule"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hLine5"
            android:layout_marginTop="10dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>