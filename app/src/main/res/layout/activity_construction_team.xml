<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/dataRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/filtrateCL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#5000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="278dp"
                android:layout_height="524dp"
                android:background="@color/white"
                app:layout_constraintRight_toRightOf="parent">

            <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <View
                    android:id="@+id/fg1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorEDE"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toBottomOf="@id/city"
                    android:layout_marginTop="5dp"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/cityRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:spanCount="4"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/fg1"/>


            <TextView
                    android:id="@+id/houseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toBottomOf="@id/cityRV"/>
            <View
                    android:id="@+id/fg2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorEDE"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toBottomOf="@id/houseType"
                    android:layout_marginTop="5dp"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/levelRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:spanCount="3"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/fg2"/>




            <RadioButton android:id="@+id/confirm"
                         android:layout_width="160dp"
                         android:layout_height="44dp"
                         android:text="确定"
                         android:gravity="center"
                         android:background="@drawable/bac_366"
                         android:checked="true"
                         android:textSize="14sp"
                         android:button="@null"
                         android:textColor="@color/white"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintRight_toRightOf="parent"
            />
            <RadioButton android:id="@+id/cancel"
                         android:layout_width="0dp"
                         android:layout_height="44dp"
                         android:text="确定"
                         android:gravity="center"
                         android:background="@drawable/bac_ede"
                         android:checked="false"
                         android:textSize="14sp"
                         android:button="@null"
                         android:textColor="@color/color5D5"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintRight_toLeftOf="@id/confirm"
                         app:layout_constraintLeft_toLeftOf="parent"
            />


        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>