<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/predetermine_bac"
>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/predetermine"
            android:paddingBottom="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/phoneTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/phoneTV"
                          app:layout_constraintTop_toTopOf="@id/phoneTV"
                          app:layout_constraintBottom_toBottomOf="@id/phoneTV"
                          android:textSize="14sp"
                          android:textColor="@color/color333"
                          android:gravity="left"
                          android:paddingLeft="5dp"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的姓名："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/nameTV"
                          app:layout_constraintTop_toTopOf="@id/nameTV"
                          app:layout_constraintBottom_toBottomOf="@id/nameTV"
                          android:textSize="14sp"
                          android:textColor="@color/color333"
                          android:gravity="left"
                          android:paddingLeft="5dp"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/addressTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的姓名："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/province"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="北京市"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/addressTV"
                        app:layout_constraintTop_toTopOf="@id/addressTV"
                        app:layout_constraintBottom_toBottomOf="@id/addressTV"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>
                <TextView
                        android:id="@+id/city"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="北京市"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/addressTV"
                        app:layout_constraintBottom_toBottomOf="@id/addressTV"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>

                <TextView
                        android:id="@+id/county"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="朝阳区"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/addressTV"
                        app:layout_constraintTop_toBottomOf="@id/province"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>
                <TextView
                        android:id="@+id/town"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="奥运村街道"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/county"
                        app:layout_constraintBottom_toBottomOf="@id/county"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/addressTV"
                          app:layout_constraintTop_toBottomOf="@id/county"
                          android:textSize="14sp"
                          android:textColor="@color/color333"
                          android:gravity="left"
                          android:paddingLeft="5dp"
                          android:layout_marginTop="10dp"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/villageTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区名称："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="59dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/villageTV"
                          app:layout_constraintTop_toTopOf="@id/villageTV"
                          android:textSize="14sp"
                          android:textColor="@color/color333"
                          android:gravity="left"
                          android:padding="5dp"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/areaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="        面积："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/areaTV"
                          app:layout_constraintTop_toTopOf="@id/areaTV"
                          app:layout_constraintBottom_toBottomOf="@id/areaTV"
                          android:textSize="14sp"
                          android:textColor="@color/color333"
                          android:gravity="left"
                          android:paddingLeft="5dp"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/typeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="        户型："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="三室一厅"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/typeTV"
                        app:layout_constraintTop_toTopOf="@id/typeTV"
                        app:layout_constraintBottom_toBottomOf="@id/typeTV"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/styleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望风格："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="中式"
                        android:textColor="#2A2A2A"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:drawableTint="@color/black"
                        android:paddingRight="9dp"
                        android:drawableRight="@mipmap/down_icon"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/styleTV"
                        app:layout_constraintTop_toTopOf="@id/styleTV"
                        app:layout_constraintBottom_toBottomOf="@id/styleTV"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/budgetTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望风格："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText
                        android:id="@+id/start"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/budgetTV"
                        app:layout_constraintTop_toTopOf="@id/budgetTV"
                        app:layout_constraintBottom_toBottomOf="@id/budgetTV"
                        android:textSize="14sp"
                        android:textColor="@color/color333"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="7dp"/>
                <TextView
                        android:id="@+id/interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~"
                        app:layout_constraintLeft_toRightOf="@id/start"
                        app:layout_constraintTop_toTopOf="@id/budgetTV"
                        app:layout_constraintBottom_toBottomOf="@id/budgetTV"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"/>
                <EditText
                        android:id="@+id/end"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_amount_layout"
                        app:layout_constraintLeft_toRightOf="@id/interval"
                        app:layout_constraintTop_toTopOf="@id/budgetTV"
                        app:layout_constraintBottom_toBottomOf="@id/budgetTV"
                        android:textSize="14sp"
                        android:textColor="@color/color333"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万元"
                        app:layout_constraintLeft_toRightOf="@id/end"
                        app:layout_constraintTop_toTopOf="@id/budgetTV"
                        app:layout_constraintBottom_toBottomOf="@id/budgetTV"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="26dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                <EditText android:layout_width="0dp"
                          android:layout_height="59dp"
                          android:background="@drawable/bg_amount_layout"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintLeft_toRightOf="@id/remark"
                          app:layout_constraintTop_toTopOf="@id/remark"
                          android:layout_marginRight="32dp"
                          android:layout_marginLeft="7dp"/>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
            android:id="@+id/predetermine"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/color366"
            android:text="立即预约"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
